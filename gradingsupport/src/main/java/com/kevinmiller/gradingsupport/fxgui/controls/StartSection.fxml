<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="TabPane" side="LEFT" tabClosingPolicy="UNAVAILABLE" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
  <tabs>
    <Tab text="Student details">
      <content>
        <AnchorPane>
               <children>
                  <StackPane>
                     <children>
                        <VBox>
                           <children>
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox spacing="10.0">
                                       <children>
                                          <Label text="Name" />
                                          <Label text="Matrikelnr" />
                                       </children>
                                       <padding>
                                          <Insets top="5.0" />
                                       </padding>
                                    </VBox>
                                    <VBox spacing="5.0">
                                       <children>
                                          <TextField fx:id="nameField"/>
                                          <TextField fx:id="idField"/>
                                       </children>
                                    </VBox>
                                 </children>
                                 <padding>
                                    <Insets top="5.0" />
                                 </padding>
                              </HBox>
                              <Button fx:id="enterButton" mnemonicParsing="false" text="Enter" />
                              <Label style="-fx-font-weight: bold;" text="Current entry:">
                              	<padding>
                                    <Insets top="20.0" />
                                 </padding>
                              </Label>
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Name" />
                                          <Label text="Matrikelnr" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label fx:id="nameLabel"/>
                                          <Label fx:id="idLabel"/>
                                       </children>
                                    </VBox>
                                 </children>
                                 <padding>
                                    <Insets top="5.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="10.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
          </AnchorPane>
      </content>
    </Tab>
  </tabs>
</fx:root>
